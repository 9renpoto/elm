{
  "name": "elm",
  "version": "0.0.1",
  "main": "n/a",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.0"
  },
  "scripts": {
    "lint:elm": "elm-format --validate tests",
    "test:lint": "run-p lint:*",
    "test:unit": "elm-test",
    "test": "run-p test:*"
  },
  "lint-staged": {
    "*.elm": [
      "elm-format --yes",
      "elm-format --validate",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
