{
  "name": "elm",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "elm-format": "0.8.1",
    "elm-test": "0.19.0-rev3",
    "husky": "1.2.0",
    "lint-staged": "8.1.0",
    "npm-run-all": "4.1.3",
    "prettier": "1.15.2"
  },
  "scripts": {
    "lint:elm": "elm-format --validate tests",
    "test:lint": "run-p lint:*",
    "test:unit": "elm-test",
    "test": "run-p test:*"
  },
  "lint-staged": {
    "*.elm": [
      "elm-format --yes",
      "elm-format --validate",
      "git add"
    ],
    "*.md": [
      "prettier",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
